@model FilmViewer.Models.RegisterViewModel
@{
    Html.RenderPartial("_SearchFull");
}


@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "loginPanel", role = "form" }))
{
    @Html.AntiForgeryToken()
    <p class="login__title">Register <br><span class="login-edition">Wellcome in FilmViewer</span></p>
    <div class="field-wrap">
        @if (!Html.ViewData.ModelState.IsValid)
        {
            @Html.ValidationSummary("", new { @class = "inv-em alert alert-danger" })
        }

        @Html.TextBoxFor(m => m.Email, new { @class = "login__input", placeholder = "E-mail" })
        @Html.PasswordFor(m => m.Password, new { @class = "login__input", placeholder = "Password" })
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "login__input", placeholder = "Password repeat" })

    </div>
    <div class="login__control">
        <button type='submit' class="btn btn-md btn--warning btn--wider">Register</button>
        <br /><br />
        @Html.ActionLink("Already has accout?", "Login", null, new { @class = "btn btn--sign" })
    </div>
}

