<div class="search-wrapper">
    <div class="container--add">
        @using (Html.BeginForm("Index", "Actor", FormMethod.Get, htmlAttributes: new { @class = "search" }))
        {
            <input type="text" name="searchString" class="search__field" placeholder="Search actor" value="@ViewBag.ActorFilter">
            <button type='submit' class="btn btn-md btn--danger search__button">Search actor</button>
        }
    </div>
</div>